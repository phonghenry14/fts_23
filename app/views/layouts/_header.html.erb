<header class="header">
  <div class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <%= link_to "sample app", root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to t('layouts.home'), root_path %></li>
          <li><%= link_to t('layouts.help'), help_path %></li>
          <% if user_signed_in? %>
            <% if current_user.is_admin? %>
              <li><%= link_to t('layouts.user'), admin_users_path, class: 'navbar-link' %></li>
              <li><%= link_to t('layouts.course'), admin_courses_path, class: 'navbar-link' %></li>
              <li class="dropdown" >
                <a href="#"  class="dropdown-toggle" data-toggle="dropdown" >
                  <%= current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu" >
                  <li><%= link_to t('layouts.profile'), current_user, class: 'glyphicon glyphicon-info-sign' %></li>
                  <li><%= link_to t('layouts.edit_profile'), edit_user_registration_path, class: 'glyphicon glyphicon-edit' %></li>
                  <li class="divider" ></li>
                  <li><%= link_to t('layouts.logout'), destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-off' %></li>
